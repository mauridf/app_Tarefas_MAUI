<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="app_Tarefas.Paginas.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="FrameCardStyle" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="LightGray" />
                <Setter Property="Padding" Value="10" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="HasShadow" Value="True" />
                <Setter Property="WidthRequest" Value="200" />
            </Style>

            <Style x:Key="LabelFrameCardStyle" TargetType="Label">
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="FontSize" Value="Large" />
                <Setter Property="HorizontalTextAlignment" Value="Center" />
                <Setter Property="VerticalOptions" Value="Center" />
            </Style>

            <Style x:Key="CollectionViewFrameStyle" TargetType="Label">
                <Setter Property="BackgroundColor=" Value="White" />
                <Setter Property="Padding=" Value="10" />
                <Setter Property="Margin=" Value="5" />
                <Setter Property="CornerRadius=" Value="10" />
                <Setter Property="HorizontalOptions=" Value="FillAndExpand" />
                <Setter Property="HasShadow=" Value="True" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView Orientation="Horizontal">
        <HorizontalStackLayout Spacing="10">
            <VerticalStackLayout>
                <Frame Style="{StaticResource FrameCardStyle}">
                    <Label Style="{StaticResource LabelFrameCardStyle}" Text="BACKLOG" />
                    <CollectionView>
                        <!--  Template para Itens  -->
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Style="{StaticResource CollectionViewFrameStyle}">
                                    <StackLayout HorizontalOptions="FillAndExpand">
                                        <!--  Título do Cartão  -->
                                        <Label
                                            Padding="5"
                                            HorizontalOptions="Start"
                                            LineBreakMode="TailTruncation"
                                            Text="{Binding .}"
                                            WidthRequest="200" />
                                    </StackLayout>

                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Frame>
            </VerticalStackLayout>
            <VerticalStackLayout>
                <Frame Style="{StaticResource FrameCardStyle}">
                    <Label Style="{StaticResource LabelFrameCardStyle}" Text="ANÁLISE" />
                </Frame>
            </VerticalStackLayout>
            <VerticalStackLayout>
                <Frame Style="{StaticResource FrameCardStyle}">
                    <Label Style="{StaticResource LabelFrameCardStyle}" Text="PARA FAZER" />
                </Frame>
            </VerticalStackLayout>
        </HorizontalStackLayout>
